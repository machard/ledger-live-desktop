{
  "openapi": "3.0.1",
  "info": {
    "title": "Ledger Live API",
    "description": "This is the Ledger Live API",
    "version": "0.0.1"
  },
  "paths": {
    "/v0.0.1/accounts": {
      "get": {
        "tags": [
          "accounts"
        ],
        "summary": "Return Ledger Live accounts",
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/v0.0.1/account": {
      "get": {
        "tags": [
          "accounts"
        ],
        "summary": "Return a Ledger Live account chosen by the user",
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/v0.0.1/transaction": {
      "post": {
        "tags": [
          "accounts"
        ],
        "summary": "Send securely a transaction",
        "requestBody": {
          "description": "Pet object that needs to be added to the store",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "allgood"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Transaction": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "example": "libcore:..:0xaaaa...."
          },
          "recipient": {
            "type": "string",
            "example": "0xaaaa...."
          },
          "amount": {
            "type": "string",
            "example": "1"
          }
        },
        "xml": {
          "name": "Transaction"
        }
      }
    }
  }
}
  